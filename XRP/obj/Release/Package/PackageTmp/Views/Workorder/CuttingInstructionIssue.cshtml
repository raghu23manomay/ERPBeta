    <script>
        var $j = jQuery.noConflict(true);
    </script>
    <script type="text/javascript">
        function print() {

            $("#spn_date").text($('#txt_cutdatecut').val());
            $("#spn_to").text($('#txt_cuttocut').val());
            $("#spn_from").text($('#txt_cutfromcut').val());
            $("#spn_partname").text($('#txt_partnamecut').val());
            $("#spn_ms").text($('#txt_materialspecificationcut').val());
            $("#spn_dieno").text($('#txt_dienocut').val());
            $("#spn_hc").text($('#txt_heatcodecut').val());
            $("#spn_sec").text($('#txt_sectioncut').val());
            $("#spn_cc").text($('#txt_colorcodecut').val());
            $("#spn_cutwt").text($('#txt_cutweightcut').val());
            $("#spn_cl").text($('#txt_cutlengthcut').val());
            $("#spn_pq").text($('#txt_planqtycut').val());
            $("#spn_aq").text($('#txt_actualqtycut').val());
            $("#spn_rmr").text($('#txt_rmrequired').val());
            $("#spn_pb").text($('#txt_preparedbycut').val());
            $("#spn_ab").text($('#txt_aprovedbycut').val());
            $("#spn_partname").text($('#txt_partnamecut').val());
            var print = document.getElementById("tbl_print");
            print.style.display = "block";


            var divContents = $("#div_print").html();
            var printWindow = window.open('', '', 'height=400,width=800');
            printWindow.document.write('<html><head><title></title>');
            printWindow.document.write('</head><body >');
            printWindow.document.write(divContents);
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.print();
            print.style.display = "none";


        }
    </script>
