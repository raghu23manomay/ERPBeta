@model XRP.Models.ssmtbl_WorkorderModel
@{
    ViewBag.Title = "Workorder Planning";
    ViewBag.Active = "Marketing";
   // Layout = "~/Views/Shared/_NewLayout.cshtml";
    Layout = null;
}
@using (Html.BeginForm("WorkorderPlanning", "Workorder", FormMethod.Get, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="@ViewBag.HideClass" style="text-align:center">
            @ViewBag.Message
        </div>
        <!-- PAGE TITLE -->
        <div class="page-title">
            <h2><span class="fa fa-arrow-circle-o-left"></span>Workorder Planning</h2>
        </div>

        <div class="row">
            <div class="col-md-12">

                <div class="col-md-10"></div>
                <div class="col-md-2">

                    <div class="panel panel-default tabs" id="tabs">

                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active"><a href="#first" aria-controls="first" role="tab" data-toggle="tab">Raw Material</a></li>
                            <li><a href="#second" aria-controls="second" role="tab" data-toggle="tab">Production Unit</a></li>
                            <li><a href="#third" aria-controls="third" role="tab" data-toggle="tab">Die</a></li>
                            <li><a href="#fourth" aria-controls="fourth" role="tab" data-toggle="tab">Track</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="first">      
                                 @Html.Action("RMPlanning", "Planning", new { wono = @TempData["wono"], gradeOfMaterial = @TempData["gof"], section = @TempData["section"], ht = @TempData["ht"] });
                             
                            </div>
                                <div role="tabpanel" class="tab-pane" id="second">
                                    @*@{Html.RenderAction("RMPlanning", "Planning");}*@
                                </div>
                            <div role="tabpanel" class="tab-pane" id="third">
                              
                            </div>
                            <div role="tabpanel" class="tab-pane" id="fourth">
                             
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <style>
            div {
                font-weight: normal;
                font-size: medium;
                text-align: left;
                font-family: Calibri, lighter;
            }
        </style>
        </fieldset>
 
     <script type="text/javascript" src="~/NewCssAndTheme/js/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/NewCssAndTheme/js/plugins/jquery/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/NewCssAndTheme/js/plugins/bootstrap/bootstrap.min.js"></script>
    
    <script src="~/Scripts/datatables.min.js"></script>
    
      <script type="text/javascript">
          $(document).ready(function () {
              var wono = getUrlVars()["wono"];
              var gof = getUrlVars()["gof"];
              var ht = getUrlVars()["ht"];
              var section = getUrlVars()["section"];
              function getUrlVars() {
                  var vars = {};
                  var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
                      vars[key] = value;
                  });
                  return vars;
              }
          });
        </script>
}
