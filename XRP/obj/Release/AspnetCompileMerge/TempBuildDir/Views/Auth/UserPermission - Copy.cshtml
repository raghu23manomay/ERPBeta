<script>
    $(document).ready(function () {
        document.body.style.overflow = 'hidden';
        setulandli();
    });
    function setulandli() {

        $.ajax({
            type: "GET",
            url: "../Auth/getRolls",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data1) {
                $.each(data1, function (i) {
                    $("#rollul").append('<tr class="trUserBind'+ data1[i].UserId +'"><td><h6 class="mt-0 mb-1 font-weight-normal"><a onclick="return RolltableBind(\'' + data1[i].UserId + '\',\'' + data1[i].UserName + '\')" class="nav-link r-20" data-toggle="pill" role="tab" style="color:grey" aria-controls="v-pills-home" href="#tabs-' + data1[i].UserId + '">' + data1[i].UserName + '</a></h6></td><tr>');


                });

            }
        });
    }
    function RolltableBind(UserId, UserName) {
       
        $(".trUserBind"+ UserId).addClass("p-3 b-b light border-right border-primary");
        $(".trUserBind"+ UserId).siblings().removeClass("p-3 b-b light border-right border-primary");

        $("#spn_rollname").text(UserName);
        $("#hdn_userid").text(UserId);
        $.ajax({
            type: "GET",
            url: "../Auth/getfeatures",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (getfdata1) {
                $("#featuretbody").empty();
                var tr = '';
                $.each(getfdata1, function (ij) {

                    //tr = tr + '<tr>' + '<td>' + (ij + 1) + '<input type="hidden" value="' + getfdata1[ij].FeaturesId + '"/></td>' +
                    //'<td>' + getfdata1[ij].FeaturesName + '</td>' +
                    //'<td><div class="custom-control custom-checkbox"><input type="checkbox" class="custom-control-input" name="viewonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"  id="viewonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"  value="1"><label class="custom-control-label" for="viewonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"></label>' + '</div></td>' +
                    //'<td><div class="custom-control custom-checkbox"><input type="checkbox" disabled class="custom-control-input" name="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"  id="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '" value="1"><label class="custom-control-label" for="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"></label></div></td>' +
                    //'<td><div class="custom-control custom-checkbox"><input type="checkbox" disabled class="custom-control-input" name="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"  id="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '" value="1"><label class="custom-control-label" for="editonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"></label></div></td>' +
                    //'<td><div class="custom-control custom-checkbox"><input type="checkbox" disabled class="custom-control-input" name="deleteonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"  id="deleteonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '" value="1"><label class="custom-control-label" for="deleteonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"></label></div></td>' +
                    //'<td><div class="custom-control custom-checkbox"><input type="checkbox" disabled class="custom-control-input" name="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '"  id="addonly_' + getfdata1[ij].FeaturesId + '_' + UserId + '" value="1"><label class="custom-control-label" for="approval' + getfdata1[ij].FeaturesId + '_' + UserId + '"></label></div></td>' +
                    $("#featuretbody").append("<tr>");
                    $("#featuretbody").append("<td>" + (ij + 1) + '<input type="hidden" value="' + getfdata1[ij].SubMenuID + "</td>");
                    $("#featuretbody").append("<td>" + getfdata1[ij].FeaturesName + "</td>");
                    if (getfdata1[ij].Add != 0) {

                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='addonly_" + (ij + 1) + "'><label class='custom-control-label' for='addonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].Edit != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='editonly_" + (ij + 1) + "'><label class='custom-control-label' for='editonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].Delete != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='deleteonly_" + (ij + 1) + "'><label class='custom-control-label' for='deleteonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].View != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='vieweonly_" + (ij + 1) + "'><label class='custom-control-label' for='vieweonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].Approval != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='approveonly_" + (ij + 1) + "'><label class='custom-control-label' for='approveonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].Print != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='printonly_" + (ij + 1) + "'><label class='custom-control-label' for='printonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].Download != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='downloadonly_" + (ij + 1) + "'><label class='custom-control-label' for='downloadonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }
                    if (getfdata1[ij].SendMail != 0) {
                        $("#featuretbody").append("<td><div class='custom-control custom-checkbox'><input type='checkbox' class='custom-control-input' id='sendmailonly_" + (ij + 1) + "'><label class='custom-control-label' for='sendmailonly_" + (ij + 1) + "'></label></div></td>");
                    }
                    else {
                        $("#featuretbody").append('<td>X</td>');
                    }

                    $("#featuretbody").append("</tr>");



                });
                // $("#featuretbody").append(tr);




                $.getJSON('../Auth/getpermission', function (data) {

                    $.each(data, function (i, dataitem) {
                        var idv = 'viewonly_' + dataitem.FeaturesID + '_' + dataitem.UserID;
                        var ida = 'addonly_' + dataitem.FeaturesID + '_' + dataitem.UserID;
                        var idd = 'deleteonly_' + dataitem.FeaturesID + '_' + dataitem.UserID;

                        if (dataitem.FormView == 1) {
                            $("#" + idv).attr('checked', 'checked');
                        }
                        else {
                            $("#" + idv).removeAttr('checked');
                        }
                        if (dataitem.FormAdd == 1) {
                            $("#" + ida).attr('checked', 'checked');
                        }
                        else {
                            $("#" + ida).removeAttr('checked');
                        }
                        if (dataitem.FormDelete == 1) {
                            $("#" + idd).attr('checked', 'checked');
                        }
                        else {
                            $("#" + idd).removeAttr('checked');
                        }

                    });
                });
            }
        });
    }
    $(document).on('click', '.btn_Save', function () {


        var rollid = $("#hdn_userid").text();

        var featuretbody = 'featuretbody_' + rollid;

        $j('#tbl_userrole tr').not(':first').each(function (i) {

            var currentRowCells = $(this).children();
            var sd = currentRowCells.eq(0).find('input[type="hidden"]');
            var fid = sd.val();
            var idv = 'viewonly_' + fid + '_' + rollid;
            var ida = 'addonly_' + fid + '_' + rollid;
            var idd = 'deleteonly_' + fid + '_' + rollid;
            var vresulr = ($('#' + idv).prop('checked') == true) ? 1 : 0;
            var aresulr = ($('#' + ida).prop('checked') == true) ? 1 : 0;
            var dresulr = ($('#' + idd).prop('checked') == true) ? 1 : 0;
            $.ajax({
                type: "POST",
                url: "../Auth/savedatapermission",
                data: JSON.stringify({ UserId: '' + rollid + '', FeaturesId: '' + fid + '', view: '' + vresulr + '', Add: '' + aresulr + '', Delete: '' + dresulr + '' }),
                contentType: "application/json;charset=utf-8",
                // dataType: "json",
                success: function (status) {

                },
                error: function (err) {
                    //alert('Error occured');
                }
            });
        });




    });

</script>
