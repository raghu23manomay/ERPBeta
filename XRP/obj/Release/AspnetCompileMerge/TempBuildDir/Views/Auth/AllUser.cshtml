                <div class="row my-3">
                    <div class="col-md-12">
                        <div class="card r-0 shadow">
                            <div class="table-responsive">
                                <form action="">
                                  
                                    <table class="table table-striped table-hover" style="width:100%" id="" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th style="display:none;">
                                                    ID
                                                </th>
                                                <th>#</th>
                                                <th>
                                                    NAME
                                                </th>
                                                <th>
                                                   USER ROLL
                                                </th>
                                                <th>
                                                    DEPARTMENT
                                                </th>
                                                <th>
                                                    CONTACT NUMBER
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="tbodyUser">

                                           

                                        </tbody>
                                    </table>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</fieldset>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/Validations/JqueryUi.js"></script>

<script type="text/javascript">
    var $j = jQuery.noConflict(true);
</script>
<script>
    $(document).ready(function () {
        bindUsers();
        
        
    });
</script>
<script>

    function bindUsers() {

        $.ajax({
            type: "GET",
            url: "../Auth/getUsers",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (getfdata1) {
                $("#tbodyUser").empty();
                var tr = '';
                $.each(getfdata1, function (ij) {

                    tr = $('<tr/>');
                    tr.append("<td style='display:none;'>" + getfdata1[ij].UserId + "</td>");
                    tr.append("<td>" + (ij + 1) + "</td>");
                    tr.append("<td>" + getfdata1[ij].Name + "</td>");
                    tr.append("<td>" + getfdata1[ij].UserType + "</td>");
                    tr.append("<td>" + getfdata1[ij].DepartmentName + "</td>");
                    tr.append("<td>" + getfdata1[ij].ContactNumber + "</td>");
                    $("#tbodyUser").append(tr);

                });


            }
        });
    }
</script>
