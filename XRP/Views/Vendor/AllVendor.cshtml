@model XRP.Models.Paged_ssmtbl_CustomerModel
@using XRP.Global;
@{
    ViewBag.Title = "AllVendor";
    ViewBag.Active = "Master";
    ViewBag.Feature = "Vendor";
    ViewBag.FeatureAdd = "newADD";
    Layout = "~/Views/Shared/_DesignLayout.cshtml";
}
<div class="paddingTop15">

    <ul class="nav nav-tabs" id="myTabs" role="tablist">
        <li role="presentation" class="active"><a href="#EnquiryList" aria-controls="EnquiryList" role="tab" data-toggle="tab">Vendor List</a></li>
        <li role="presentation">
            <a href="@Url.Action("NewVendor", "Vendor")" class="">  New Vendor</a>
        </li> 
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active paddingTop15" id="EnquiryList">

            @using (Html.BeginForm("AllVendor", "Vendor", FormMethod.Get, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {

                @Html.ValidationSummary(true)
                <div class="clearfix  ">

                    <div class="btn-toolbar pull-left" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group" role="group" aria-label="First group">


                            <div class="btn btn-default" style="    padding-bottom: 11px;">
                                <div class="form-check height20Pixel">
                                    <input class="form-check-input" id="selectAll" type="checkbox">
                                    <label class="form-check-label verticalAlignTop" for="selectAll">1</label>
                                </div>
                            </div>
                            <button class="btn btn-default" type="button"><i class="fa fa-ban" aria-hidden="true"></i> Disqualify</button>

                            <button class="btn btn-default" type="button"><i class="fa fa-tag" aria-hidden="true"></i> Add tags</button>
                            <div class="btn-group">
                                <button class="btn btn-default dropdown-toggle" aria-expanded="false" aria-haspopup="true" type="button" data-toggle="dropdown"><i class="fa fa-ellipsis-h" aria-hidden="true"></i> More <!--span class="caret"></span--></button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li class="divider" role="separator"></li>
                                    <li><a href="#">Separated link</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="btn-group pull-right">

                        <button class="btn btn-default dropdown-toggle" aria-expanded="false" aria-haspopup="true" type="button" data-toggle="dropdown"><i class="fa fa-window-maximize" aria-hidden="true"></i> <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another2</a></li>
                            @*<li><a href="#">Something else here</a></li>
                            <li class="divider" role="separator"></li>
                            <li><a href="#">Separated link</a></li>*@
                        </ul>
                    </div>

                    <a class="btn btn-primary dropdown-toggle pull-right" href="@Url.Action("NewVendor", "Vendor")"><i class="fa fa-plus" aria-hidden="true"></i>  Add New</a>

                </div>

             
                <table class="table table-bordered table-striped Pad0" id="tbl_AllEditCustomer" >
                    <thead>
                        <tr>
                            <th style="display:none;">
                                ID
                            </th>
                            <th>#</th>
                            <th>
                                NAME
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                IsActive
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.ssmtbl_CustomerModel)
                        {
                        <tr class="mosurhandsymbol">
                            <td style="display:none">
                                @data.ID
                            </td>
                            <td>  <input class="form-check-input" type="checkbox" id="three"></td>
                            <td width="40%">
                                <div class=""> 
                                    
                                </div>
                                <div>
                                    <div>
                                        <strong>@data.Name</strong>
                                    </div>
                                    <small>@data.Telephone_No</small>
                                </div>
                            </td>

                            <td width="40%">
                                @data.tag
                            </td>
                            <td width="5%">
                                @if (data.flag == true)
                                {
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id=@data.ID checked value=" @data.ID" disabled>
                                        <label class="custom-control-label" for=@data.ID></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id=@data.ID value=" @data.ID" disabled>
                                        <label class="custom-control-label" for=@data.ID></label>
                                    </div>
                                }
                            </td>
                            <td>

                                <div class="btn-group">
                                    
                                    <a  aria-expanded="false" aria-haspopup="true"  data-toggle="dropdown"><i class="fa fa-ellipsis-h" aria-hidden="true"></i>  </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#" onclick="vendoractive(@data.ID)">Active</a></li>
                                        <li><a href="#" onclick="vendordeactive(@data.ID)">Deactive</a></li>


                                    </ul>
                                </div>
                               
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
        </div>


        <div role="tabpanel" class="tab-pane" id="NewEnquiry">

        </div>
    </div>
</div>
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/Validations/JqueryUi.js"></script>

<script type="text/javascript">
        $(document).ready(function () {
            $('#tbl_AllEditCustomer').DataTable({

                "ordering": false,
                "info": false
            });
            $('#tbl_AllEditCustomer tr td:not(:last-child)').click(function () {
                var currentRow = $(this).closest("tr");
                var id = currentRow.find("td:eq(0)").text();
                id = id.trim();
                if (id != "") {
                    location.href = "@Url.Action("EditVendor", "Vendor")?id=" + id;
                }
                else {
                    location.href = "@Url.Action("EditVendor", "Vendor")";
                }

            });


        });
        function vendoractive(id)
        {
            $.ajax({
                type: "POST",
                url: "../Vendor/vendoractive",
                data: JSON.stringify({ VId: ' ' + id + '' }),
                contentType: "application/json;charset=utf-8",
                success: function (response) {
                    window.location.reload();
                },
                error: function (err) {
                    window.location.reload();
                    //alert('Error occured 123');
                  //  alert(err);
                }
            });
        }
        function vendordeactive(id)
        {
            $.ajax({
                type: "POST",
                url: "../Vendor/vendordeactive",
                data: JSON.stringify({ VId: ' ' + id + '' }),
                contentType: "application/json;charset=utf-8",
                success: function (response) {
                    window.location.reload();
                },
                error: function (err) {
                    window.location.reload();
                    //alert('Error occured 123');
                  //  alert(err);
                }
            });
        }
</script>

            }
