@model XRP.Models.Paged_ssmtbl_CustomerModel
@using XRP.Global;
@{
    ViewBag.Title = "AllVendor";
    ViewBag.Active = "Master";
    ViewBag.Feature = "Vendor";
    ViewBag.FeatureAdd = "newADD";
    Layout = "~/Views/Shared/_DesignLayout.cshtml";
}

@using (Html.BeginForm("AllVendor", "Vendor", FormMethod.Get, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <header class="blue accent-3 relative">
            <div class="container-fluid text-white">
                        <h4>
                            <i class="icon-database"></i>
                            Vendor
                        </h4>
                <div class="row justify-content-between">
                    <ul class="nav nav-material nav-material-white responsive-tab" id="v-pills-tab" role="tablist">
                        <li>
                            <a class="nav-link active" id="v-pills-all-tab" data-toggle="pill" href="#v-pills-all" role="tab" aria-controls="v-pills-all"><i class="icon icon-home2"></i>Vendor List</a>
                        </li>
                        <li class="float-right">
                            <a class="nav-link newADD" href='@Url.Action("NewVendor", "Vendor")'><i class="icon icon-plus-circle"></i>New Vendor</a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
        <div class="container-fluid animatedParent animateOnce">
            <div class="tab-content my-3" id="v-pills-tabContent">
                <div class="tab-pane animated fadeInUpShort show active" id="v-pills-all" role="tabpanel" aria-labelledby="v-pills-all-tab">
                    <div class="row my-3">
                        <div class="col-md-12">
                            <div class="card r-0 shadow">
                                <div class="">
                                    <form action="">
                                        <br />
                                        @{ int rowNo = 0; }
                                        <table class="table table-striped table-hover" id="tbl_AllEditCustomer" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th style="display:none;">
                                                        ID
                                                    </th>
                                                    <th>#</th>
                                                    <th>
                                                        NAME
                                                    </th>
                                                    <th>
                                                        Type
                                                    </th>
                                                    <th>
                                                        IsActive
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody> 
                                                @foreach (var data in Model.ssmtbl_CustomerModel)
                                                { 
                                                        <tr class="mosurhandsymbol">
                                                            <td style="display:none">
                                                                @data.ID
                                                            </td>
                                                            <td>@(rowNo += 1)</td>
                                                            <td width="40%">
                                                                <div class="">

                                                                    @*<span class="avatar-letter avatar-letter-@data.Name.ToLower().First() avatar-md circle"></span>*@
                                                                </div>
                                                                <div>
                                                                    <div>
                                                                        <strong>@data.Name</strong>
                                                                    </div>
                                                                    <small>@data.Telephone_No</small>
                                                                </div>
                                                            </td>
                                                          
                                                            <td width="40%">
                                                                @data.tag  
                                                            </td>
                                                            <td width="5%">
                                                                @if (data.flag == true)
                                                                {
                                                                    <div class="custom-control custom-checkbox">
                                                                        <input type="checkbox" class="custom-control-input" id=@data.ID checked value=" @data.ID" disabled>
                                                                        <label class="custom-control-label" for=@data.ID></label>
                                                                    </div> 
                                                                }
                                                                else
                                                                { 
                                                                    <div class="custom-control custom-checkbox">
                                                                        <input type="checkbox" class="custom-control-input" id=@data.ID value=" @data.ID" disabled>
                                                                        <label class="custom-control-label" for=@data.ID></label>
                                                                    </div> 
                                                                }
                                                            </td>
                                                            <td>
                                                                <a aria-expanded="false" aria-haspopup="true" href="#" data-toggle="dropdown">
                                                                    <i class="icon-more_horiz p-0"></i>
                                                                </a>
                                                                <div class="dropdown-menu dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(169px, 98px, 0px);">
                                                                    <a class="dropdown-item mosurhandsymbol"  onclick="vendoractive(@data.ID)">
                                                                        Active 
                                                                    </a>
                                                                    <a class="dropdown-item mosurhandsymbol"  onclick="vendordeactive(@data.ID)">
                                                                        Deactive 
                                                                    </a> 
                                                                </div>
                                                            </td>
                                                        </tr> 
                                                }
                                            </tbody>
                                        </table> 
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </fieldset>
    <style>
        .mosurhandsymbol {
            cursor: pointer;
        }
    </style>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Validations/JqueryUi.js"></script>
    <script>
        var $j = jQuery.noConflict(true);
    </script>
    <script type="text/javascript">
        $(document).ready(function () { 
            $('#tbl_AllEditCustomer').DataTable({

                "ordering": false,
                "info": false
            });
            $('#tbl_AllEditCustomer tr td:not(:last-child)').click(function () {
                var currentRow = $(this).closest("tr");
                var id = currentRow.find("td:eq(0)").text();
                id = id.trim();
                if (id != "") {
                    location.href = "@Url.Action("EditVendor", "Vendor")?id=" + id;
                }
                else {
                    location.href = "@Url.Action("EditVendor", "Vendor")";
                }

            });


        });
        function vendoractive(id)
        {
            $.ajax({
                type: "POST",
                url: "../Vendor/vendoractive",
                data: JSON.stringify({ VId: ' ' + id + '' }),
                contentType: "application/json;charset=utf-8",
                success: function (response) {
                    window.location.reload();
                },
                error: function (err) {
                    window.location.reload();
                    //alert('Error occured 123');
                  //  alert(err);
                }
            });
        }
        function vendordeactive(id)
        {
            $.ajax({
                type: "POST",
                url: "../Vendor/vendordeactive",
                data: JSON.stringify({ VId: ' ' + id + '' }),
                contentType: "application/json;charset=utf-8",
                success: function (response) {
                    window.location.reload();
                },
                error: function (err) {
                    window.location.reload();
                    //alert('Error occured 123');
                  //  alert(err);
                }
            });
        }
    </script>

}