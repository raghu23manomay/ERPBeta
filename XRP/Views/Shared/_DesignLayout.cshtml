                    <li class="MenuItem" id="Purchase"><a href="#"><div><i class="fa fa-shopping-basket" aria-hidden="true"></i></div>Purchase</a></li>
                    <li class="MenuItem" id="Planning"><a href="#"><div><i class="fa fa-tasks" aria-hidden="true"></i></div>Planning</a></li>
