            <nav id="sidebar">
                <ul class="list-unstyled components marginTop60 paddingTop15">
                    <li class="MenuItem" id="Dashboard"><a href="#"><div><i class="fa fa-dashboard" aria-hidden="true"></i></div>Dashboard</a></li>
