                </ul>
            </nav>
        </div>
    </nav>
    <div class="paddingRight15 marginLeft100 marginTop60">
        <div class="row">
            <div class="col-xs-2">
                <div class="slide" id="enqFilter">
                    @Html.Partial("../Home/ManuBar")
                </div>
            </div>
            <div class="col-xs-10">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
<script src="../assets/js/app.js"></script>
<script src="~/NewCssAndTheme/js/BackToTop.js"></script>
<script src="~/assets/js/UserAccess.js"></script>
<script>
    $(document).ready(function () {
        var url = window.location.pathname.split("/");
        var action = url[1];
        $(".mnu").hide();
        if (action == "Inquiry") {
            $("#mnuMarketing").show();
        }
        else if (action == "Customer" || action == "Vendor" || action == "GradeOfMaterial" || action == "Section" || action == "DieDescription" || action == "Auth" ) {
            $("#mnuMaster").show();
        } else if (action == "PORequisition" || action == "PurchaseOrder" || action == "VendorPurchaseOrder" ) {
            $("#mnuPurchase").show();
        }
        else if (action == "Workorder" || action == "Workorder" || action == "Workorder") {
            $("#mnuPlanning").show();
        }
        else if (action == "Cutting" || action == "Forging" || action == "HeatTreatment") {
            $("#mnuProduction").show();
        }
        else if (action == "GoodsInward" || action == "GoodsIssued" || action == "DeliveryChallan" || action == "DCForRMTest")  {
            $("#mnuStock").show();
        }
        else if (action == "QuotationApproval" || action == "DieRequisitionApproval" || action == "PurchaseOrderApproval" || action == "RMRequisitionApproval" || action == "VendorPurchaseOrderApproval") {
            $("#mnuMyApprovals").show();
        }
        
        $(".MenuItem").on("click", function () {
            $(".slide").show();
            var id = this.id;
            $(".mnu").hide(); 
            if (id == "Dashboard") {
                $("#mnuDashaboard").show();
            }
         else   if (id == "Marketing") {
                $("#mnuMarketing").show();   
            }
            else if (id == "Master") {
                $("#mnuMaster").show();
            }
            else if (id == "Purchase") {
                $("#mnuPurchase").show();
            }
            else if (id == "Planning") {
                $("#mnuPlanning").show();
            }
            else if (id == "Production") {
                $("#mnuProduction").show();
            }
            else if (id == "Stock") {
                $("#mnuStock").show();
            }
            else if (id == "Approvals") {
                $("#mnuMyApprovals").show();
            }
            else if (id == "User") {
                $("#mnuUser").show();
            }
            else if (id == "Reports") {
                $("#mnuReports").show();
            }
        });
      
    });
</script>

 
