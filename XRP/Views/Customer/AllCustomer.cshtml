    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tbl_AllEditCustomer').DataTable({
                
                "ordering": false,
                "info": false
            });
            $('#tbl_AllEditCustomer tr').click(function () {
                var currentRow = $(this).closest("tr");
                var id = currentRow.find("td:eq(0)").text();
                id = id.trim();
                if (id != "") {
                    location.href = "@Url.Action("EditCustomer", "Customer")?id=" + id;
                }
                else {
                    location.href = "@Url.Action("AllCustomer", "Customer")";
                }

            });

        });
    </script>
}