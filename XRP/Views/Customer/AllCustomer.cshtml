@model XRP.Models.Paged_ssmtbl_CustomerModel
@using XRP.Global;
@{
    ViewBag.Title = "AllCustomer";
    ViewBag.Active = "Master";
    ViewBag.Feature = "Customer";
    ViewBag.FeatureAdd = "newADD";
    Layout = "~/Views/Shared/_DesignLayout.cshtml";
    //Layout = Session["layout"].ToString();
}

@using (Html.BeginForm("AllCustomer", "Customer", FormMethod.Get, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", }))
{
    @Html.ValidationSummary(true)
   
    <fieldset>

        <!-- PAGE TITLE -->
        <header class="blue accent-3 relative">
            <div class="container-fluid text-white">
                <div class="row p-t-b-10 ">
                    <div class="col">
                        <h4>
                            <i class="icon-database"></i>
                            Customer
                        </h4>
                    </div>
                </div>
                <div class="row justify-content-between">
                    <ul class="nav nav-material nav-material-white responsive-tab" id="v-pills-tab" role="tablist">
                        <li>
                            <a class="nav-link active" id="v-pills-all-tab" data-toggle="pill" href="#v-pills-all" role="tab" aria-controls="v-pills-all"><i class="icon icon-home2"></i>Customer List</a>
                        </li>
                        @*<li>
                                <a class="nav-link" id="v-pills-buyers-tab" data-toggle="pill" href="#v-pills-buyers" role="tab" aria-controls="v-pills-buyers"><i class="icon icon-face"></i> Buyers</a>
                            </li>
                            <li>
                                <a class="nav-link" id="v-pills-sellers-tab" data-toggle="pill" href="#v-pills-sellers" role="tab" aria-controls="v-pills-sellers"><i class="icon  icon-local_shipping"></i> Sellers</a>
                            </li>*@
                        <li class="float-right">
                            <a class="nav-link newADD" href='@Url.Action("NewCustomer", "Customer")'><i class="icon icon-plus-circle"></i>New Customer</a>
                        </li>
                    </ul>
                </div>
            </div>

        </header>
        <div class="container-fluid animatedParent animateOnce">
            <div class="tab-content my-3" id="v-pills-tabContent">
                <div class="tab-pane animated fadeInUpShort show active" id="v-pills-all" role="tabpanel" aria-labelledby="v-pills-all-tab">
                    <div class="row my-3">
                        <div class="col-md-12">
                            <div class="card r-0 shadow">
                                <div class="table-responsive">
                                    <form action="">
                                        @{ int rowNo = 0; }<br />
                                        <table class="table table-striped table-hover" style="width:100%" id="tbl_AllEditCustomer" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th style="display:none;">
                                                        ID
                                                    </th>
                                                    <th>#</th>
                                                    <th>
                                                      
                                                        NAME
                                                    </th>
                                                    <th>
                                                        ADDRESS
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                                    @foreach (var data in Model.ssmtbl_CustomerModel)
                                                    {

                                                        <tr class="mosurhandsymbol">
                                                            <td style="display:none">
                                                                @data.ID
                                                            </td>
                                                            <td>@(rowNo += 1)</td>
                                                           
                                                            <td>
                                                                <div class="avatar avatar-md mr-3 mt-1 float-left">

                                                                    <span class="avatar-letter avatar-letter-@data.Name.ToLower().First() avatar-md circle"></span>
                                                                </div>
                                                                <div>
                                                                    <div>
                                                                        <strong>@data.Name</strong>
                                                                    </div>
                                                                    <small>@data.Telephone_No</small>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                @data.Address
                                                            </td>

                                                        </tr>

                                                    }
                                                   
                                                </tbody>
                                        </table>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </fieldset>
    
    <style>
        .mosurhandsymbol {
            cursor: pointer;
        }
    </style>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Validations/JqueryUi.js"></script>
    <script>
        var $j = jQuery.noConflict(true);
