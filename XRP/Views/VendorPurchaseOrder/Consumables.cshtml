<script>
        $(document).ready(function () {
            $(function () {
                $('.date-time-picker').datetimepicker({
                    format: 'd-m-Y',
                    timepicker: false
                });
            });
            $(document).on("click", ".classAdd", function () { //

                if ($('#ItemCodeM').val()) {
                    var tbQty = parseInt($('#QtyM').val());
                    if (!isNaN(tbQty) && tbQty > 0) {
                        if ($('#RatePerM').val()) {
