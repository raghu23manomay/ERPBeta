    <script type="text/javascript">
        $('#tbl_gm tbody').on('click', 'td', function () {

            var currentRow = $(this).closest("tr");
            var srno = currentRow.find("td:eq(0)").text();
            var material = currentRow.find("td:eq(1)").text();
            var cc = material.match(/\d+/);

            $("#btn_Save").val("Update");
            $("#txt_grade").val(cc);
            $("#hdn_srno").text(srno);
            if (material.indexOf("Dia") != -1) {
                $("#rd_dia").prop("checked", true);
            }
            else if (material.indexOf("Rcs") != -1 || material.indexOf("RCS") != -1) {
                $("#rd_rcs").prop("checked", true);
            }


        });
    </script>
    <script type="text/javascript">
        $("#btn_Save").click(function () {
            SaveData();
        });
        function SaveData() {
            if ($('#btn_Save').val() == "Update") {
                if (($("#txt_grade").val() == "")) {
                    alert("Please fill all  fields");
                    return false;
                }
                else {
                    var srno = $("#hdn_srno").text();
                    var mg1 = ($("#txt_grade").val());
                    if ($("#rd_dia")[0].checked) {
                        secv = "Dia";
                    }
                    if ($("#rd_rcs")[0].checked) {

                        secv = "RCS";
                    }
                    var section = mg1 + " " + secv;

                    $.ajax
                                ({
                                    type: "POST",
                                    url: "../Section/UpdateSection",
                                    data: JSON.stringify({ srno: '' + srno + '', section: '' + section + '' }),
                                    contentType: "application/json;charset=utf-8",
                                    dataType: "json",
                                    success: function (status) {
                                        alert("Section Updated Successfully");
                                        $("#txt_grade").val("");
                                        $("#btn_Save").val("Save");
                                        location.reload();
                                    },
                                    error: function (err) {
                                        alert('Error occured');

                                    }
                                });
                }
            }
            else {
                var un = $("#UN").val();
                if (($("#txt_grade").val() == "")) {
                    alert("Please fill all  fields");                 
                    return false;
                }
                else {
                    var mg1 = ($("#txt_grade").val());
                    if ($("#rd_dia")[0].checked) {
                        secv = "Dia";
                    }
                    if ($("#rd_rcs")[0].checked) {
