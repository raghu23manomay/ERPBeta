                                    dataType: "json",
                                    success: function (status) {                                      
                                        alert("Section Inserted Successfully");                                     
                                        $("#txt_grade").val("");
                                        $("#btn_Save").val("Save");
                                        location.reload();
                                    },
                                    error: function (err) {
                                        alert('Error occured');

                                    }
                                });
                }
            }

